{
  "name": "@advanceddevelopment/caip-bot-core",
  "version": "0.1.42",
  "description": "CAIP bot core is a library of reusable modules and shared utils to create bots using CAIP BOT Framework",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf -rf ./dist && rimraf -rf ./node_modules",
    "build": "rimraf -rf ./dist && npm run build:deps && npm run build:compile && npm run publishPrep",
    "build:deps": "npm update --dev",
    "build:compile": "tsc --project ./tsconfig.json",
    "publishPrep": "pwsh --Command \"Copy-Item -Path package.json -Destination ./dist/package.json\" && cd dist && npm install --only=prod",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }'  mocha -r ts-node/register 'tests/**/*.spec.ts' --exit",
    "coverage": "nyc --reporter=lcov --reporter=html -e .ts -x \"./*.spec.ts\" npm run test"
  },
  "author": "Optum",
  "license": "UNLICENSED",
  "publishConfig": {
    "registry": "https://repo1.uhc.com/artifactory/api/npm/npm-local"
  },
  "repository": {
    "type": "git",
    "url": "https://github.optum.com/advanced-development/caip-bot-core.git"
  },
  "dependencies": {
    "@azure/identity": "^3.1.3",
    "@azure/keyvault-secrets": "^4.1.0",
    "@azure/service-bus": "^7.7.1",
    "@azure/storage-blob": "^12.11.0",
    "@types/form-data": "^2.5.0",
    "@types/node": "^14.18.28",
    "@types/object-hash": "^2.1.0",
    "@types/qs": "^6.9.6",
    "@types/ws": "^7.4.4",
    "agentkeepalive": "^4.1.4",
    "applicationinsights": "^1.8.10",
    "axios": "^0.21.1",
    "axios-retry": "^3.1.9",
    "botbuilder": "4.20.0",
    "botbuilder-azure-blobs": "^4.20.0",
    "https-proxy-agent": "^5.0.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.19",
    "object-hash": "^2.2.0",
    "pdfkit": "^0.12.3",
    "qs": "^6.10.1",
    "rimraf": "^5.0.1",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "ws": "^7.4.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/lodash": "^4.14.185",
    "@types/mocha": "^8.2.1",
    "@types/sinon": "^9.0.10",
    "chai": "^4.3.3",
    "mocha": "^8.4.0",
    "nock": "^13.0.11",
    "nyc": "^15.1.0",
    "sinon": "^9.2.4",
    "sonarqube-scanner": "^2.8.0"
  }
}
