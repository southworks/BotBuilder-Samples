{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "dist/*.spec.ts"],
  "exclude": ["node_modules"]
}
